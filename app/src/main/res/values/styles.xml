<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--TextView styles-->
    <style name="Textview">
        <item name="android:textSize">@dimen/textsize_medium</item>
    </style>

    <style name="Textview.Vibrant">
        <item name="android:textColor">?attr/colorPrimaryDark</item>
    </style>

    <style name="Textview.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Textview.White.Small">
        <item name="android:textSize">@dimen/textsize_small</item>
    </style>

    <style name="Textview.Dark">
        <item name="android:textColor">@color/black_light</item>
    </style>

    <style name="Textview.Dark.Small">
        <item name="android:textSize">@dimen/textsize_small</item>
    </style>

    <style name="Textview.Dark.Large">
        <item name="android:textSize">@dimen/textsize_large</item>
    </style>

    <style name="Icon">
        <item name="fontPath">@string/font_fontawesome</item>
        <item name="android:textSize">@dimen/icon_font_medium</item>
    </style>

    <style name="Icon.Large">
        <item name="android:textSize">@dimen/icon_font_large</item>
    </style>

    <!--ProgressBar-->
    <style name="CircularProgress">
        <item name="pv_circular">true</item>
        <item name="pv_autostart">true</item>
        <item name="pv_progressMode">indeterminate</item>
    </style>

    <style name="CircularProgress.Blue">
        <item name="pv_progressStyle">@style/CircularProgressDrawableStyle.Blue</item>
    </style>

    <style name="CircularProgressDrawableStyle" parent="Material.Drawable.CircularProgress">
        <item name="cpd_inAnimDuration">800</item>
        <item name="cpd_inStepPercent">0</item>
        <item name="cpd_outAnimDuration">400</item>
    </style>

    <style name="CircularProgressDrawableStyle.Blue">
        <item name="cpd_strokeColor">@color/color_primary</item>
    </style>
</resources>
