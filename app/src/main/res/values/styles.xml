<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--TextView styles-->
    <style name="Textview">
        <item name="android:textSize">@dimen/textsize_medium</item>
    </style>

    <style name="Textview.Vibrant">
        <item name="android:textColor">?attr/colorPrimaryDark</item>
    </style>

    <style name="Textview.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Textview.White.Small">
        <item name="android:textSize">@dimen/textsize_small</item>
    </style>

    <style name="Textview.Dark">
        <item name="android:textColor">@color/black_light</item>
    </style>

    <style name="Textview.Dark.Small">
        <item name="android:textSize">@dimen/textsize_small</item>
    </style>

    <style name="Textview.Dark.Large">
        <item name="android:textSize">@dimen/textsize_large</item>
    </style>

    <style name="Icon">
        <item name="fontPath">@string/font_fontawesome</item>
        <item name="android:textSize">@dimen/icon_font_medium</item>
    </style>

    <style name="Icon.Large">
        <item name="android:textSize">@dimen/icon_font_large</item>
    </style>

</resources>
